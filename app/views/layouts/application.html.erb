<!DOCTYPE html>
<html>
<head>
  <title>JamWithFriends</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-left">
    <button class="navbar-btn">
      <%= link_to image_tag("JamWithFriends.png", class: "logo"), root_path %>
    </button>   
  </div>
  <form class="navbar-form navbar-left" role="search">
      <%= form_tag search_path, method: :get do %> 
        <div class="form-group">
          <%= text_field_tag "search[find]", "Instrument, Genere...", :onclick => 'if($(this).val()=="Instrument, Genere..."){$(this).val("");};'%>
        </div>
        <div class="form-group">
          <%= text_field_tag "search[location]", "Brooklyn, Manhattan, Feletto...", :onclick => 'if($(this).val()=="Brooklyn, Manhattan, Feletto..."){$(this).val("");};'%>
        </div>
          <%= button_tag(:type => 'submit', :class => 'btn  btn-default') do %>
          <i class="glyphicon glyphicon-search"></i>
          <% end %>
      <% end %>
  </form>
  
 <% if user_signed_in? %>
   <ul class="nav navbar-nav navbar-right">
    <div class="btn-group-vertical">
       <li>
        <%= link_to "#{current_user.name}", profile_path(current_user)%>
       </li>
       <li>
         <%= link_to "log out", destroy_user_session_path, method: :delete %>
       </li>
     </div>        
    </ul>

  <% else %>
     <ul class="nav navbar-nav navbar-right">  
       <div class="btn-group-vertical">
         <li>
           <%= link_to content_tag(:span,  "sign in", class: "navtop"), new_user_session_path %>
         </li>
         <li>
           <%= link_to content_tag(:span, "sign up", class: "navtop"), new_user_registration_path %>
         </li>      
        </div>  
     </ul>
 <% end %>
</nav>


<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name == :notice ? "success" : "danger" %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>



    
  <%= yield %>
</div>
</body>
</html>
