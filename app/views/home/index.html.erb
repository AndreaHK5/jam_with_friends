<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="row">
  <div class="jumbotron">
    <div class="col-md-3">
      Jam With Friends
    </div>
    <%= form_tag search_path, method: :get do %> 
    <div class="col-md-3">
      <%= text_field_tag "search[find]"%>
    </div>
    <div class="col-md-3">
      <%= text_field_tag "search[location]", "#{@location_search}"%>
    </div>
    <div class="col-md-3">
      <%= submit_tag 'Find awesome people'%>
    </div>
  </div>    
</div>
<p>Advance search</p>
<div class="row">
  <div class="col-md-5">
    Instruments <br>  
    <%= check_box_tag "search[instrument_id][]", "all" %>
    <%= label_tag "All Instruments" %> <br>
    <% Instrument.all.each do |instrument| %>
    <%= check_box_tag "search[instrument_id][]", instrument.id %>
    <%= label_tag dom_id(instrument), instrument.name %> <br>
    <% end %>
  </div>
  <div class="col-md-5">
    Generes <br>
    <%= check_box_tag "search[genere_id][]", "all" %>
    <%= label_tag "All generes" %> <br>
    <% Genere.all.each do |genere| %>
    <%= check_box_tag "search[genere_id][]", genere.id %>
    <%= label_tag dom_id(genere),  genere.name %> <br> 
     <% end %>
  </div>
  <div class="col-md-2">
    <%= label_tag "Interest Radius" %>
    <%= text_field_tag "search[radius]", "20" %>
    <%= submit_tag 'Search'%>
  </div>
</div>

<% end %>

<div class="row">
  <div class="col-md-4">
    <ul><% @users.each do |user| %>
      <li>
        <%= link_to user.name, profile_path(user) %> <%= user.location.address %> <%= user.generes.collect {|g| g.name} %> <%= user.instruments.collect {|g| g.name} %>
      </li>
      <% end %>
    </ul>
  </div>  
  <div class="col-md-8">
      <div id="map" style='width: 100%; height: 400px;'>
      </div>
     <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(12);
    });
    </script>
  </div>
</div>








