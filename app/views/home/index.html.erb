<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="page-header">
  <h3 class="intro">Found <%= "#{@users.count}" %> (awesome) users near <strong class="call-out"><%= "#{Geocoder.search(@location_search).first.postal_code}" %></strong> for <strong class="call-out"><%= @generes.collect {|g| g.name}.join(", ")%></strong>
    playing 
    <strong class="call-out"><%= @instruments.collect {|i| i.name}.join(", ")%></strong></h3>
</div>

<div class="row">
  <div class="col-md-4">
    <ul class="list-group"><% @users.each do |user| %>
      <li class="list-group-item">

       <div class="profile-image">
        <%= link_to(image_tag("#{user.pers_picture}", class: "profile-image-inner"), profile_path(user)) %>
       </div>
       <div class="basic-info-top">
          <div class= "basic-info-content basic-info-name">
            <%= link_to user.name, profile_path(user) %>
          </div>
          <div class= "basic-info-content">
            <%= user.generes.collect {|g| g.name}.join(", ") %>
          </div>
          <div class= "basic-info-content">
            <%= user.instruments.collect {|g| g.name}.join(", ") %>
          </div>
        </div>

        <div class="basic-info-bottom">
          <div class="basic-info-bottom-content">
            Home location: <%= user.location.address %>
          </div>
          <div class="basic-info-bottom-content">
          Contact: 
            <% if user_signed_in?  %>
              <%= user.email %>
            <% else %>
              <%= link_to content_tag(:span, "sign up/sign in"), new_user_registration_path %>
            <% end %>
          </div>  
        </div>
      </li>
      <% end %>
    </ul>
  </div>  
  <div class="col-md-8">
    <div class="advanced-search"> 
      <%= form_tag search_path, method: :get do %>
      <p>Advanced search</p>
        <div class="form-component-l">
         <%= label_tag :search, "Instrument" %>
         <%= collection_select(:search, :instrument_id, Instrument.all, :id, :name, {include_hidden: false} , {multiple: true, :class => "chzn-search", "data-placeholder" => "Select Instrument(s)"}) %>
        </div>
        <div class="form-component-l">        
         <%= label_tag :search, "Genere", class: "chzn-label" %>
         <%= collection_select(:search, :genere_id, Genere.all, :id, :name,{include_hidden: false}, {multiple: true, :class => "chzn-search", "data-placeholder" => "Select Genere(s)"}) %>    
        </div>
        <div class="form-component-l">
         <%= label_tag "Location" %>
         <%= text_field_tag "search[location]", @location_search, {:class => "loc-search"}%>        
        </div>
        <div class="form-component-s">
         <%= label_tag "Radius" %>
         <%= select(:search,:radius, [1,5,10,20,30]) %>
       </div>
       <div class="form-component-s" style="float: right">
        <%= button_tag(:type => 'submit', :class => 'btn  btn-default btn-adv-search') do %>
          <i class="glyphicon glyphicon-search"></i>
        <% end %>
        </div>
      <% end %>
    </div>
    <div id="map" style='width: 100%; height: 400px;'>
    </div>
     <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(12);
    });
  </script>
  </div>
</div>







