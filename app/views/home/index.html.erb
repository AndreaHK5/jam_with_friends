<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<p>Advance search</p>
<%= form_tag search_path, method: :get do %> 
<div class="row">
  <div class="col-md-5">
    <%= label_tag :search, "Instrument" %>
    <%= collection_select(:search, :instrument_id, Instrument.all, :id, :name, {:prompt => "Select instrument(s)", include_hidden: false} , {multiple: true, :class => "chzn-search"}) %>
  </div>
  <div class="col-md-5">
    <%= label_tag :search, "Genere" %>
    <%= collection_select(:search, :genere_id, Genere.all, :id, :name,{:prompt => "Select genere(s)", include_hidden: false}, {multiple: true, :class => "chzn-search"}) %>     
  </div>
  <div class="col-md-2">
    <%= label_tag "Interest Radius" %>
    <%= text_field_tag "search[radius]", "20" %>
    <%= label_tag "Location" %>
    <%= text_field_tag "search[location]"%>
    <%= submit_tag 'Search'%>
  </div>
</div>

<% end %>

<div class="row">
  <div class="col-md-4">
    <ul><% @users.each do |user| %>
      <li>
        <%= link_to user.name, profile_path(user) %> <%= user.location.address %> <%= user.generes.collect {|g| g.name} %> <%= user.instruments.collect {|g| g.name} %>
      </li>
      <% end %>
    </ul>
  </div>  
  <div class="col-md-8">
      <div id="map" style='width: 100%; height: 400px;'>
      </div>
     <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(12);
    });
    </script>
  </div>
</div>








