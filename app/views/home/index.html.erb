<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<p>Found <%= "#{@users.count}" %> users near <%= "#{@location_search}" %></p>
<p>For <%= "#{@generes.collect {|g| g.name}}" %> playing <%= "#{@instruments.collect {|g| g.name}}" %> </p>
<div class="row">
  <div class="col-md-4">
    <ul><% @users.each do |user| %>
      <li>
        <%= link_to user.name, profile_path(user) %> <%= user.location.address %> <%= user.generes.collect {|g| g.name} %> <%= user.instruments.collect {|g| g.name} %>
      </li>
      <% end %>
    </ul>
  </div>  
  <div class="col-md-8">
      <div id="map" style='width: 100%; height: 400px;'>
      </div>
     <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(12);
    });
    </script>
        <p>Advanced search</p>
    <%= form_tag search_path, method: :get do %> 
     <%= label_tag :search, "Instrument(s)" %>
     <%= collection_select(:search, :instrument_id, Instrument.all, :id, :name, {include_hidden: false} , {multiple: true, :class => "chzn-search"}) %>
     <%= label_tag :search, "Genere(s)" %>
     <%= collection_select(:search, :genere_id, Genere.all, :id, :name,{include_hidden: false}, {multiple: true, :class => "chzn-search"}) %><br>
     <%= label_tag "Location" %>
     <%= text_field_tag "search[location]", @location_search, {:class => "loc-search"}%>
     <%= label_tag "Interest Radius (mi)" %>
     <%= select(:search,:radius, [1,5,10,20,30]) %><br>
     <%= submit_tag 'Search'%>
    <% end %>

  </div>
</div>








