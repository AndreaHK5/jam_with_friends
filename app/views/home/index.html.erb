<h1>Jam_With_Friends</h1>
<h2>Your place to find cool people to jam with</h2>
<p>Here's a list </p>

<ul><% @users.each do |user| %>
<li><%= user.name %> <%= user.location.address %> <%= user.generes.collect {|g| g.name} %> <%= user.instruments.collect {|g| g.name} %></li>
<% end %></ul>
<br>


<%= form_tag search_path, method: :get do %>
<h3> Instruments </h3>
  <%= check_box_tag "search[instrument_id][]", "all" %>
  <%=label_tag "All Instruments" %> <br>
  <% Instrument.all.each do |instrument| %>
  <%= check_box_tag "search[instrument_id][]", instrument.id %>
  <%=label_tag dom_id(instrument), instrument.name %> <br>
 <% end %>
<h3> Generes </h3>
  <%= check_box_tag "search[genere_id][]", "all" %>
  <%=label_tag "All generes" %> <br>
  <% Genere.all.each do |genere| %>
  <%= check_box_tag "search[genere_id][]", genere.id %>
  <%=label_tag dom_id(genere),  genere.name %> <br> 
 <% end %>

<%= submit_tag 'Search'%>
<% end %>
<br>


