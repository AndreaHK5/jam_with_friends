<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="page-header">
  <h3>Found <%= "#{@users.count}" %> users near <strong><%= "#{@location_search}" %></strong> for <strong><%= @generes.collect {|g| g.name}.join(", ")%></strong>
    playing 
    <strong><%= @instruments.collect {|i| i.name}.join(", ")%></strong></h3>
</div>

<div class="row">
  <div class="col-md-4">
    <ul class="list-group"><% @users.each do |user| %>
      <li class="list-group-item">
        <div class="usr-basic-info-top">
            <div class="profile-image">
            <%= link_to(image_tag("#{user.pers_picture}", class: "profile-image"), profile_path(user)) %>
            </div>
            <div class="basic-info">
             <%= link_to user.name, profile_path(user) %><br>
              Generes: <strong><%= user.generes.collect {|g| g.name}.join(", ") %></strong><br> 
             Instruments: <strong><%= user.instruments.collect {|g| g.name}.join(", ") %></strong> 
            </div>
        </div>
        <div class="usr-basic-info-bottom">
          <p>
          Home location: <%= user.location.address %> 
          </p>
          <p>
          Contact: <% if user_signed_in?  %>
            <%= user.email %>          
          <% else %>
            Login/Sign Up to contact me!
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>  
  <div class="col-md-8">
      <div id="map" style='width: 100%; height: 400px;'>
      </div>
     <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(12);
    });
    </script>
        <p>Advanced search</p>
    <%= form_tag search_path, method: :get do %> 
     <%= label_tag :search, "Instrument(s)" %>
     <%= collection_select(:search, :instrument_id, Instrument.all, :id, :name, {include_hidden: false} , {multiple: true, :class => "chzn-search"}) %>
     <%= label_tag :search, "Genere(s)" %>
     <%= collection_select(:search, :genere_id, Genere.all, :id, :name,{include_hidden: false}, {multiple: true, :class => "chzn-search"}) %><br>
     <%= label_tag "Location" %>
     <%= text_field_tag "search[location]", @location_search, {:class => "loc-search"}%>
     <%= label_tag "Interest Radius (mi)" %>
     <%= select(:search,:radius, [1,5,10,20,30]) %><br>
     <%= submit_tag 'Search'%>
    <% end %>

  </div>
</div>








