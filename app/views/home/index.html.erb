<h2>Your place to find cool people to jam with</h2>
<p>Here's a list </p>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'>

  </div>
</div>
 <script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(14)
});
 </script>

<h2>Do a search? </h2>
<%= form_tag search_path, method: :get do %>
<h3> Instruments </h3>
  <%= check_box_tag "search[instrument_id][]", "all", :checked %>
  <%= label_tag "All Instruments" %> <br>
  <% Instrument.all.each do |instrument| %>
  <%= check_box_tag "search[instrument_id][]", instrument.id %>
  <%= label_tag dom_id(instrument), instrument.name %> <br>
  <% end %>
<h3> Generes </h3>
  <%= check_box_tag "search[genere_id][]", "all", :checked %>
  <%= label_tag "All generes" %> <br>
  <% Genere.all.each do |genere| %>
  <%= check_box_tag "search[genere_id][]", genere.id %>
  <%= label_tag dom_id(genere),  genere.name %> <br> 
   <% end %>
<h3> Geometrical </h3>
    <%= label_tag "Address" %>
    <%= text_field_tag "search[location][]", "#{@location_search}"%>
    <br>
    <%= label_tag "Radius" %>
    <%= text_field_tag "search[radius][]", "20" %>
    <br>
<%= submit_tag 'Search'%>
<% end %>
<br>


<ul><% @users.each do |user| %>
<li>
  <%= link_to user.name, profile_path(user) %> <%= user.location.address %> <%= user.generes.collect {|g| g.name} %> <%= user.instruments.collect {|g| g.name} %>
</li>
<% end %></ul>
