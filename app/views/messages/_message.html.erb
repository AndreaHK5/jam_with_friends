<%= div_for(message, :class => (message.is_unread?(@actor) ? 'unread' : '')) do %>
  <div class="media">
    <div class="pull-left">
      <%= link_to "#{message.sender.name}", profile_path(message.sender) %>
    </div> said:

  <div class="media-body">        
    <div class="word-break pre-message">
      <%= raw(message.body) %>
    </div>
  </div>
</div>
<% end %>