<h2><%= @user.name %> </h2>
<%= image_tag @user.photo.url, width: 150 %>
<h3> Instruments </h3>
<% if @user.instrxps != nil %>
  <% @user.instrxps.each do |instrxp| %>
    <p><%= instrxp.instrument.name %> since <%= instrxp.since %></p>
  <% end %>
<% else %>
 <p>No insturments yet...</p>
<% end %>

<h3> Generes </h3>
<% if @user.generes != nil %>
  <% @user.generes.each do |generes| %>
    <p><%= generes.name %></p>
  <% end %>
<% else %>
  <p>No generes yet....</p>
<% end %>

<h3> Location </h3>
<% if @user.location != nil %>
  <p>Address: <%= @user.location.address %></p>
  <p>Radius: <%= @user.location.radius %>   (miles)</p>
<% else %>
<p>no location yet...</p>
<% end %>


