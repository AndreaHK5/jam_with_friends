<h2><%= @user.name %> </h2>
<%= image_tag current_user.photo.url, width: 150 %>
<h3> Instruments </h3>

<% if current_user.instruments.empty? %>
 <p>No insturments yet...</p>
 <%= link_to "add instruments to become searcheable!", edit_profile_path(current_user)  %>
<% else %>
  <% current_user.instrxps.each do |xp| %>
    <p><%= xp.instrument.name %>, played since <%= xp.since %></p>
  <% end %> 
<% end %>

<h3> Genres </h3>
<% if current_user.genres.empty? %>
  <p>No genres yet....</p>
 <%= link_to "add genres to become searcheable!", edit_profile_path(current_user)  %> 
<% else %>
  <% current_user.genres.each do |genres| %>
  <p><%= genres.name %></p>
  <% end %>
<% end %>

<h3> Location </h3>
<% if current_user.location != nil %>
  <p>Address: <%= current_user.location.address %></p>
  <p>Radius: <%= current_user.location.radius %>   (miles)</p>
<% else %>
 <p>no location yet...</p>
<% end %>
<% if current_user.eql?(@user) %>
<%= link_to "edit profile", edit_profile_path(current_user)  %>
<%= link_to "password reset", edit_user_registration_path %>
<% end %>

